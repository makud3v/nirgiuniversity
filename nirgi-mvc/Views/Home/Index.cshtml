@{
    ViewData["Title"] = "Home";
}

<div>
    <h1>Nirgi University</h1>
    <div class="row">
        <div class="col-md">
            <p class="text-md-left fs-5">The best school on earth</p>
        </div>
        <div class="col">
            <h3>Home to <span class="number-highlight">@(ViewBag.StudentCount ?? 0)</span> students</h3>
            <h3>Studying <span class="number-highlight">@(ViewBag.CourseCount ?? 0)</span> courses</h3>
            <h3>Taught by <span class="number-highlight">@(ViewBag.InstructorCount ?? 0)</span> instructors</h3>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-md"></div>
        <div class="col-md">
            <a class="btn btn-primary w-100 p-3 fs-2" href="https://www.tthk.ee/sisseastujale/">Enroll now</a>
        </div>
    </div>
</div>