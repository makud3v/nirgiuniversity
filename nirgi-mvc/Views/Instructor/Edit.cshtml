@model nirgi_mvc.Models.Instructor

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        @Html.HiddenFor(model => model.Id)
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="form-group col-sm-10">
                @Html.EditorFor(model => model.LastName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HireDate)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.HireDate)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OfficeAssignment.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.EditorFor(model => model.OfficeAssignment.Location)
            </dd>
        </dl>

        <table class="table">
            <tr>
                <th>Number</th>
                <th>Title</th>
                <th>Department</th>
                <th></th>
            </tr>

            @foreach(Course course in ViewBag["AllCourses"])
            {
                <tr>
                    <td>@course.CourseID</td>
                    <td>@course.Title</td>
                    <td>@course.Department</td>
                    <td>
                        
                    </td>
                </tr>
            }
        </table>

        <a asp-action="Index" class="btn btn-outline-primary">Back</a>
        <input type="submit" value="Save" class="btn btn-outline-primary" />
    </fieldset>
}